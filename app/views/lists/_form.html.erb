<% if @list.errors.any? %>
	<p>Validation errors</p>
	<ul>
	<% @list.errors.full_messages.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>
<% end %>

<%= form_for @list do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name  %>
	<%= f.submit %>
<% end %>

<%= link_to "Back", lists_path %>